{
  "name": "p-typewriter-monorepo",
  "version": "1.0.0",
  "description": "A monorepo for p-typewriter",
  "author": "",
  "license": "MIT",
  "keywords": [
    "components",
    "vue3"
  ],
  "scripts": {
    "dev": "pnpm run stub",
    "stub": "pnpm -r --parallel run stub",
    "build": "rimraf packages/*/dist && pnpm -r -F !play --parallel run build",
    "play": "pnpm -C play run dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix --max-warnings 0",
    "test": "vitest"
  },
  "devDependencies": {
    "@pity/eslint-config": "^0.1.9",
    "@types/node": "^18.7.18",
    "@unocss/reset": "^0.45.22",
    "@vitejs/plugin-vue": "^3.1.0",
    "@vitejs/plugin-vue-jsx": "^2.0.1",
    "eslint": "^8.23.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.8.3",
    "unocss": "^0.45.21",
    "unplugin-auto-import": "^0.11.2",
    "unplugin-vue-components": "^0.22.7",
    "unplugin-vue-define-options": "^0.11.2",
    "vite": "^3.1.0",
    "vitest": "^0.23.4",
    "vue": "^3.2.39"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  }
}
